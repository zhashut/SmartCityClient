<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">


    <FrameLayout
        android:id="@+id/layout_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/tab_grey"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_news"
            style="@style/MainBottomLayout">

            <ImageButton
                style="@style/MainBottomImage"
                android:background="@drawable/house_drawable" />

            <TextView
                style="@style/MainBottomTextView"
                android:enabled="false"
                android:text="首页" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_news2"
            style="@style/MainBottomLayout">

            <ImageButton
                style="@style/MainBottomImage"
                android:background="@drawable/scene_drawable" />

            <TextView
                style="@style/MainBottomTextView"
                android:enabled="false"
                android:text="全部服务" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_news3"
            style="@style/MainBottomLayout">

            <ImageButton
                style="@style/MainBottomImage"
                android:background="@drawable/house_drawable" />

            <TextView
                style="@style/MainBottomTextView"
                android:enabled="false"
                android:text="数据分析" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_news4"
            style="@style/MainBottomLayout">

            <ImageButton
                style="@style/MainBottomImage"
                android:background="@drawable/message_drawable" />

            <TextView
                style="@style/MainBottomTextView"
                android:enabled="false"
                android:text="新闻" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_news5"
            style="@style/MainBottomLayout">

            <ImageButton
                style="@style/MainBottomImage"
                android:background="@drawable/mine_drawable" />

            <TextView
                style="@style/MainBottomTextView"
                android:enabled="false"
                android:text="个人中心" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>